<%= form_for(@countdown, :html => { :role => 'form', :class => 'form' }) do |f| %>
  <% if @countdown.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@countdown.errors.count, "error") %> prohibited this countdown from being saved:</h2>

      <ul>
      <% @countdown.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-4">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form-control col-4' %>
  </div>
  <div class="form-group">
    <%= f.label :time %><br>
    <%= f.datetime_select :time, :class => 'form-control col-4' %>
  </div>
  <div class="form-group">
    <%= f.label :picture %><br>
    <%= f.file_field :picture %>
  </div>
  <div class="form-group">
    <%= f.label :link %><br>
    <%= f.text_field :link, :class => 'form-control col-4' %>
  </div>
  <div class="actions">
    <%= f.submit 'Start counting', :class => 'btn btn-success btn-lg' %>
  </div>
<% end %>
